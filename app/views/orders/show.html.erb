<div class="card shadow p-3 mb-5 bg-white rounded">
  <p style="color: green"><%= notice %></p>

  <%= render @order %>
</div>

<div>
  <%= link_to "Edit this order", edit_order_path(@order), class: "btn btn-primary" %> |
  <%= link_to "Back to orders", orders_path, class: "btn btn-primary" %>

  <%= button_to "Destroy this order", @order, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-primary" %>
</div>
