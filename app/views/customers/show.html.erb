<div class="card shadow p-3 mb-5 bg-white rounded">
  <p style="color: green"><%= notice %></p>

  <%= render @customer %>
</div>

<div>
  <%= link_to "Edit this customer", edit_customer_path(@customer), class: "btn btn-primary" %> |
  <%= link_to "Back to customers", customers_path, class: "btn btn-primary" %>

  <%= button_to "Destroy this customer", @customer, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-primary" %>
</div>
